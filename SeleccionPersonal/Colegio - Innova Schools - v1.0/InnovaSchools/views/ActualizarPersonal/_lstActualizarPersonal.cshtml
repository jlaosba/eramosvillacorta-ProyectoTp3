@model InnovaSchools.Models.ActualizarPersonalViewModel

@{
    int index = 0;
}
<span class="TitleEstTimeClass" style="color: red">
    @Html.DisplayFor(m => m.resultadoFind)
</span>


<br />
<div class="table-responsive">
    <table class="table table-hover table-striped table-bordered table-condensed">
        <tr class="active">
            <th colspan="5">LISTA DE PERSONAL</th>
        </tr>
        <tr class="active">
            <th>
                @Html.DisplayNameFor(model => model.Contrato.idContrato)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contrato.Empleado.nombreCompleto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contrato.Convocatoria.Puesto.descripcionPuesto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contrato.TipoContrato.descripcionContrato)
            </th>            
        </tr>

        @for (index = 0; index < Model.Contratos.Count; index++)
        {
            <tr>
                <td>
                    @Model.Contratos[index].idContrato
                </td>
                <td>
                    @Html.ActionLink(@Model.Contratos[index].Empleado.nombreCompleto.ToString(), "getEmpleado", "ActualizarPersonal", new { pIdContrato = @Model.Contratos[index].idContrato}, null)
                </td>
                <td>
                    @Model.Contratos[index].Convocatoria.Puesto.descripcionPuesto
                </td>
                <td>
                    @Model.Contratos[index].TipoContrato.descripcionContrato
                </td>
            </tr>
        }
    </table>
</div>


@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            debugger;
            alert(1);

        });
    </script>

}