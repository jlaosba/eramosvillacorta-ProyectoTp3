@model InnovaSchools.Models.GenerarContratoViewModel

@{
    int index = 0;
}
<span class="TitleEstTimeClass" style="color: red">
    @Html.DisplayFor(m => m.resultadoFind)
</span>


<br />
<div class="table-responsive">
    <table class="table table-hover table-striped table-bordered table-condensed">
        <tr class="active">
            <th colspan="7">LISTA DE CANDIDATOS</th>
        </tr>
        <tr class="active">
            <th>
                @Html.DisplayNameFor(model => model.Convocatoria.ConvocatoriaCandidato.Candidato.nombreCompleto)
            </th>            
            <th>
                @Html.DisplayNameFor(model => model.Convocatoria.ConvocatoriaCandidato.Candidato.Persona.documentoIdentidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Convocatoria.Puesto.descripcionPuesto)
            </th>
        
        </tr>
        @for (index = 0; index < Model.Convocatorias.Count; index++)
        {
            <tr>
                <td>
                    @Html.ActionLink(@Model.Convocatorias[index].ConvocatoriaCandidato.Candidato .Persona.nombreCompleto.ToString(), "getContrato", "GenerarContrato", new { pIdPersona = @Model.Convocatorias[index].ConvocatoriaCandidato.Candidato.Persona.idPersona }, null)
                </td>
               <td>
                    @Model.Convocatorias[index].ConvocatoriaCandidato.Candidato.Persona.documentoIdentidad
                </td>
                <td>
                    @Model.Convocatorias[index].Puesto.descripcionPuesto
                </td>                                                
            </tr>
        }
    </table>
</div>


